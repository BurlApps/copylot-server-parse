<% include ../includes/start.ejs %>
<div class="container">
  <a href="/" class="logo"><%= siteName %></a>
  <div class="modal">
    <div class="message">Create Your Account!</div>
    <div class="submessage">
      Please enter a secure alphanumeric password<br>
      that is at least 6 characters long.
    </div>
    <form action="/register">
      <input type="hidden" name="_csrf" value="<%= csrf %>">
      <input type="text" class="input" name="email" placeholder="Email" step="1" autofocus required>
      <input type="password" class="input" name="password" placeholder="Password" pattern=".{6,}" step="2" required>
      <input type="password" class="input" name="password_confirm" placeholder="Confirm Password" pattern=".{6,}" step="3" required>
      <input type="submit" class="button" value="Create Account!">
    </form>
  </div>
  <div class="bottom-text">
    Already have an account?
    <a href="/login">Sign In</a>
  </div>
</div>
<% include ../includes/footer.ejs %>
<% include ../includes/end.ejs %>
